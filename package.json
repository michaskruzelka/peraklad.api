{
    "name": "api",
    "version": "0.1.0",
    "dependencies": {
        "apollo-datasource": "^0.7.2",
        "apollo-server-lambda": "^2.19.0",
        "graphql": "^15.4.0",
        "neo4j-driver": "^4.2.1",
        "neo4j-graphql-js": "^2.19.1"
    },
    "devDependencies": {
        "apollo-server": "^2.19.1",
        "nodemon": "^2.0.6",
        "recursive-copy-cli": "^1.0.15",
        "ts-node": "^9.1.1",
        "typescript": "^4.1.3"
    },
    "scripts": {
        "build": "tsc",
        "postbuild": "recursive-copy src ./ -f '/(.graphql)$/' '/(.json)$/' '/(.cypher)$/' -w",
        "dev": "nodemon --watch src --exec yarn run build",
        "start": "nodemon --exec ts-node src/index.dev.ts"
    }
}
